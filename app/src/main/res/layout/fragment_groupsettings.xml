<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/llCreateGroup">

        <EditText
            android:id="@+id/etGroupName"
            android:layout_width="287dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textColorHint="#ffffff"
            android:hint="@string/make_group_hint"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etGroupHashtag"
            android:layout_width="287dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textColorHint="#ffffff"
            android:hint="Group Hashtag"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etGroupLocation"
            android:layout_width="287dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textColorHint="#ffffff"
            android:hint="Group Location"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/llPublic">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_label"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
            <Switch
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sPublic"
                android:checked="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/llInvites">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_label"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
            <Switch
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sInvites"
                android:checked="true"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/btnSettingsInvite"
            android:padding="8dp"
            android:textColor="@color/colorAccent"
            android:text="Invite Friends"
            android:background="@drawable/btn_login"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/btnLeaveGroup"
            android:padding="8dp"
            android:textColor="@color/colorAccent"
            android:text="Leave Group"
            android:background="@drawable/btn_login"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/btnSaveChanges"
            android:padding="8dp"
            android:textColor="@color/colorAccent"
            android:text="Save Changes"
            android:background="@drawable/btn_login"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/btnDeleteGroup"
        android:padding="8dp"
        android:textColor="@color/colorAccent"
        android:text="Delete Group"
        android:background="#CE391A"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>